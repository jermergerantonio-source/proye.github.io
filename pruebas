/**
 * Ejemplo 1: Objetos no esenciales con alto impacto
 */
function ejemplo1_ConsumoInnecesario() {
  console.log("=== EJEMPLO 1: CONSUMO INNECESARIO ===\n");
  
  const objetos = ['refresco', 'cerveza', 'energia', 'consola'];
  
  objetos.forEach(obj => {
    const litros = datos[obj];
    const result = clasificarObjeto(obj, litros);
    
    console.log(`ğŸ“Œ ${obj.toUpperCase()}`);
    console.log(`   Litros: ${litros}`);
    console.log(`   CategorÃ­a: ${result.categoria}`);
    console.log(`   Necesidad: ${result.necesidad}`);
    console.log(`   ---`);
  });
}

