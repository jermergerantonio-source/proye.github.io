/**
 * Ejecuta todos los ejemplos
 */
function ejecutarTodasPruebas() {
  console.clear();
  console.log("ğŸ§ª EJECUTANDO TODAS LAS PRUEBAS DEL CLASIFICADOR\n");
  console.log("=" .repeat(50) + "\n");
  
  ejemplo1_ConsumoInnecesario();
  console.log("\n" + "=".repeat(50) + "\n");
  
  ejemplo2_UsoModerado();
  console.log("\n" + "=".repeat(50) + "\n");
  
  ejemplo3_UsoResponsable();
  console.log("\n" + "=".repeat(50) + "\n");
  
  ejemplo4_Comparacion();
  console.log("\n" + "=".repeat(50) + "\n");
  
  ejemplo5_AnalisisCompleto();
  console.log("\n" + "=".repeat(50) + "\n");
  
  ejemplo6_Estadisticas();
  console.log("\n" + "=".repeat(50) + "\n");
  
  ejemplo7_CasosExtremos();
  console.log("\n" + "=".repeat(50) + "\n");
  
  ejemplo8_HistorialUsuario();
  
  console.log("\n" + "=".repeat(50));
  console.log("âœ… PRUEBAS COMPLETADAS");
}

/**
 * ClasificaciÃ³n rÃ¡pida de un objeto
 */
function verClasificacion(objeto) {
  if (!datos[objeto]) {
    console.warn(`âŒ Objeto "${objeto}" no encontrado`);
    return;
  }
  
  const result = clasificarObjeto(objeto, datos[objeto]);
  console.log(`\nğŸ“Š CLASIFICACIÃ“N: ${objeto.toUpperCase()}\n`);
  console.log(`Litros: ${result.litros.toLocaleString()}`);
  console.log(`Impacto: ${result.impacto}`);
  console.log(`Necesidad: ${result.necesidad}`);
  console.log(`CategorÃ­a: ${result.categoria}`);
  console.log(`\n${result.explicacion}`);
}

