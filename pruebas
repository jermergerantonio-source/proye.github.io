/**
 * Ejemplo 4: ComparaciÃ³n de objetos
 */
function ejemplo4_Comparacion() {
  console.log("=== EJEMPLO 4: COMPARACIÃ“N DE OBJETOS ===\n");
  
  const comparar = {
    'refresco (250L)': 'refresco',
    'lapiz (5L)': 'lapiz',
    'laptop (20,000L)': 'laptop'
  };
  
  console.log("ClasificaciÃ³n comparativa:\n");
  
  Object.entries(comparar).forEach(([etiqueta, obj]) => {
    const litros = datos[obj];
    const result = clasificarObjeto(obj, litros);
    
    console.log(`${etiqueta}`);
    console.log(`â†’ ${result.categoria}`);
    console.log(`â†’ Impacto: ${result.impacto}`);
    console.log(`â†’ Necesidad: ${result.necesidad}\n`);
  });
}

/**
 * Ejemplo 5: AnÃ¡lisis completo de un objeto
 */
function ejemplo5_AnalisisCompleto() {
  console.log("=== EJEMPLO 5: ANÃLISIS COMPLETO ===\n");
  
  const obj = 'laptop';
  const litros = datos[obj];
  const result = clasificarObjeto(obj, litros);
  
  console.log(`OBJETO: ${obj.toUpperCase()}`);
  console.log(`\nDATA:`);
  console.log(`  - Litros de agua: ${litros.toLocaleString()}`);
  console.log(`  - Impacto: ${result.impacto}`);
  console.log(`  - Necesidad: ${result.necesidad}`);
  console.log(`  - Prioridad: ${result.prioridad}`);
  console.log(`\nCLASIFICACIÃ“N:`);
  console.log(`  âœ“ ${result.categoria}`);
  console.log(`\nEXPLICACIÃ“N:`);
  console.log(result.explicacion);
  console.log(`\n`);
}

/**
 * Ejemplo 6: EstadÃ­sticas generales
 */
function ejemplo6_Estadisticas() {
  console.log("=== EJEMPLO 6: ESTADÃSTICAS GENERALES ===\n");
  
  // Clasificar todos los objetos
  const todosBebidas = [
    'refresco', 'lata', 'agua', 'cafe', 'energia', 'cerveza'
  ];
  
  const todosElectronicos = [
    'cable', 'audifonos', 'cargador', 'powerbank', 'celular', 
    'tablet', 'laptop', 'monitor', 'consola'
  ];
  
  const todosEscolares = [
    'lapiz', 'pluma', 'marcador', 'libreta', 'cuaderno', 'hoja',
    'paquete', 'folder', 'carpeta', 'mochila', 'calculadora',
    'cartucho', 'toner', 'libro'
  ];
  
  // Clasificar y contar
  function clasificarCategoria(lista) {
    const stats = {};
    lista.forEach(obj => {
      const result = clasificarObjeto(obj, datos[obj]);
      stats[result.categoria] = (stats[result.categoria] || 0) + 1;
    });
    return stats;
  }
  
  console.log("BEBIDAS:");
  console.log(clasificarCategoria(todosBebidas));
  console.log("\nELECTRÃ“NICA:");
  console.log(clasificarCategoria(todosElectronicos));
  console.log("\nESCOLARES:");
  console.log(clasificarCategoria(todosEscolares));
}

/**
 * Ejemplo 7: Casos extremos
 */
function ejemplo7_CasosExtremos() {
  console.log("=== EJEMPLO 7: CASOS EXTREMOS ===\n");
  
  console.log("MAYOR IMPACTO:");
  const maxObj = Object.entries(datos).reduce((max, [obj, lits]) => 
    lits > max[1] ? [obj, lits] : max
  );
  const maxResult = clasificarObjeto(maxObj[0], maxObj[1]);
  console.log(`${maxObj[0]}: ${maxObj[1].toLocaleString()} litros`);
  console.log(`CategorÃ­a: ${maxResult.categoria}\n`);
  
  console.log("MENOR IMPACTO:");
  const minObj = Object.entries(datos).reduce((min, [obj, lits]) => 
    lits < min[1] ? [obj, lits] : min
  );
  const minResult = clasificarObjeto(minObj[0], minObj[1]);
  console.log(`${minObj[0]}: ${minObj[1]} litros`);
  console.log(`CategorÃ­a: ${minResult.categoria}\n`);
}

/**
 * Ejemplo 8: Simular bÃºsquedas de usuario
 */
function ejemplo8_HistorialUsuario() {
  console.log("=== EJEMPLO 8: HISTORIAL DE BÃšSQUEDAS ===\n");
  
  const busquedas = ['refresco', 'laptop', 'lapiz', 'cerveza', 'agua'];
  const historial = [];
  
  busquedas.forEach((obj, index) => {
    const result = clasificarObjeto(obj, datos[obj]);
    historial.push(result);
    console.log(`${index + 1}. ${obj}: ${result.categoria}`);
  });
  
  // EstadÃ­sticas
  const stats = obtenerEstadisticas(historial);
  console.log(`\nRESUMEN DE BÃšSQUEDAS:`);
  console.log(`  - Consumo innecesario: ${stats['consumo innecesario']}`);
  console.log(`  - Uso moderado: ${stats['uso moderado']}`);
  console.log(`  - Uso responsable: ${stats['uso responsable']}`);
}

